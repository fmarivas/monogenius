<!DOCTYPE html>
<main class="container mx-auto px-6 py-8">
	<h1 class="text-3xl font-bold text-gray-800 mb-8 text-center">Dashboard</h1>
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
		<% Object.keys(dashboardFeatures).forEach(function(key) { %>
			<% const feature = dashboardFeatures[key]; %>
			<div class="bg-white shadow-md rounded-lg p-6 flex flex-col justify-between">
				<div>
					<div class="flex items-center mb-4">
						<i class="<%= feature.icon %> text-2xl text-indigo-600 mr-3"></i>
						<h2 class="text-xl font-semibold text-gray-800"><%= feature.name %></h2>
					</div>
					<p class="text-gray-600 mb-6"><%= feature.description %></p>
				</div>
				<a href="<%= feature.link %>" class="bg-indigo-600 hover:bg-indigo-700 text-white text-center font-bold py-2 px-4 rounded transition-colors duration-300">
					Acessar
				</a>
			</div>
		<% }); %>
	</div>
</main>
