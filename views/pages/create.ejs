<body class="bg-gray-100 font-sans">
    <!-- Modal -->
    <div id="modal" class="fixed top-0 left-1/2 transform -translate-x-1/2 z-50 invisible">
        <div class="bg-white rounded-lg shadow-lg p-4 max-w-sm mx-auto my-4">
